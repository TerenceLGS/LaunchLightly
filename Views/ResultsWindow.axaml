<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:LaunchLightly.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="LaunchLightly.Views.ResultsWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="LaunchLightly">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:ResultsWindowViewModel/>
    </Design.DataContext>
    
    <Grid ColumnDefinitions="100,10*,1*" RowDefinitions="Auto,*"  Margin="4">
        <Label Grid.Row="0" Grid.Column="1" Content="Results from LD" Margin="4" />
        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding FlagJson}" Margin="4" />
        <StackPanel Grid.Row="0" Grid.RowSpan="2" Grid.Column="2" Name="RuleClauseIndexShortcutButtons">
            <!-- for each rule and clause we need to add buttons in this stack panel to update Rule and Clause Index on the second window -->
        </StackPanel>
    </Grid>
</Window>
