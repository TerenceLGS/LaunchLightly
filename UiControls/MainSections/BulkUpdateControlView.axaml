<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:LaunchLightly.ViewModels"
             xmlns:mainSections="clr-namespace:LaunchLightly.UiControls.MainSections"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="LaunchLightly.UiControls.MainSections.BulkUpdateControlView">
    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <mainSections:BulkUpdateControlViewModel/>
    </Design.DataContext>
    
    <Grid ColumnDefinitions="100,10*,1*" RowDefinitions="Auto,Auto,Auto,Auto,Auto,*"  Margin="4">
        <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Orientation="Horizontal">
            <Label Content="Rule Index:" Margin="4" />
            <TextBox Watermark="Rule Index" Margin="4" />
            <Label Content="Clause Index:" Margin="4" />
            <TextBox Watermark="Clause Index" Margin="4" />    
        </StackPanel>
        
        <Label Grid.Row="1" Grid.Column="1" Content="IDs to change" Margin="4" />
        <TextBox Grid.Row="2" Grid.RowSpan="4" Grid.Column="1" Watermark="IDs" Margin="4" />
        <Button Grid.Row="2" Grid.Column="2" Content="Add" Margin="1" />
        <Button Grid.Row="3" Grid.Column="2" Content="Remove" Margin="1" />
        <Button Grid.Row="4" Grid.Column="2" Content="Replace" Margin="1" />
    </Grid>
</UserControl>
